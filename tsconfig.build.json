{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "lib",
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "plugins": [
      {
        "transform": "./node_modules/@effect-ts/tracing-plugin/index.js",
        "tracingModule": "@effect-ts/core/Tracing",
        "relativeToRoot": "../../../"
      }
    ]
  },
  "include": ["src/**/*.ts"]
}
